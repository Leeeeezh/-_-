/* pages/collections/collections.wxss */

.container {
  background-color: #fefefe;
}

.avatar {
  /* border-radius: 50%; */
  /* overflow: hidden; */
}

.authAvatar {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.authAvatar image{
  border-radius: 50%;
}

.header {
  width:100%;
  height: 400rpx;
  background-color: #fefefe;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.header text {
  padding: 20rpx 0;
}

.bookCount{
  color: #777;
}

.title {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.title text {
  font-weight: bold;
  border-bottom: 6rpx solid palegoldenrod;
}

.collections {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  flex-wrap: wrap;
}
