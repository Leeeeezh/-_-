.container {
  /* padding-top: 100rpx; */
  background-color: #f5f5f5;
}

.search {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: white;
  box-shadow: 0 0 10rpx #ccc;
}

.searchBar {
  width: 700rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #eee;
  border-radius: 30rpx;
  color: #555;
}

.searchBar image {
  width: 30rpx;
  height: 30rpx;
  padding: 10rpx;
}

.titleWrap {
  width: 750rpx;
  display: flex;
  justify-content: center;
}

.title {
  color: #666;
  font-weight: bold;
  margin-bottom: 30rpx;
  border-bottom: 6rpx solid palegoldenrod;
}

.books {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-top: 100rpx;
}
