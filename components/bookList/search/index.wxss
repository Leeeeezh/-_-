.container {
  width: 100%;
  min-height: 100%;
  /* position: fixed; *//* top: 0; *//* left: 0; */
  z-index: 200;
  background-color: blanchedalmond;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.body {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 10rpx;
  background-color: white;
}

.body > view {
  margin-bottom: 30rpx;
}

.title {
  border-left: 10rpx solid #222;
  padding-left: 10rpx;
}

.content {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.header {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0 10rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 300;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: white;
  box-shadow: 0 0 10rpx #eee;
}

.searchBar {
  /* width: 700rpx; */
  flex: 1 0;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background-color: #eee;
}

input {
  flex: 1 0;
  padding: 0 20rpx;
}

.searchIcon, .cancelIcon {
  width: 30rpx;
  height: 30rpx;
}

.cancel {
  padding: 10rpx;
}

.searchRecord {
  padding-top: 100rpx;
}

.result {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  padding-top: 100rpx;
}

.loading {
  color: #666;
}